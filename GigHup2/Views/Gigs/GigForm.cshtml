@model GigHup2.ViewModels.GigViewModel
@{
    ViewBag.Title = "Create";
}

<h2 class="label-primary">@Model.Heading</h2>
<p class="alert alert-danger">All Fields are <strong>Required</strong></p>
@using (Html.BeginForm(Model.Action, "Gigs"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(a=>a.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=>m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control",placeholder="eg 1 jan 2010" })
        @Html.ValidationMessageFor(m => m.Date)


    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(m => m.Time)

        
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)


    </div>
    <button type="submit"class="btn btn-primary">Save</button>

}
@section scripts{
    
    @Scripts.Render("~/bundles/jqueryval")

    }
