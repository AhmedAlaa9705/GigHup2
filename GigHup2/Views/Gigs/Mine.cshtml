@model IEnumerable<GigHup2.Core.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h3 class="alert alert-info">My Upcoming Gigs</h3>

<ul class="gigs asd">
    @foreach (var item in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @item.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @item.DateTime.ToString("d ")

                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @item.Venue             
                </span>
                <span class="genre">
                    @item.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Gigs",new { id=item.Id})">Edit</a>
                    <a href="#" class="js-cancel" data-gig-id="@item.Id">Cancel</a>

                </div>
            </div>
            
        </li>
    }
</ul>
@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-cancel").click(function (e) {
                var link = $(e.target);
                if (confirm("Are you sure you want to delete this?")) {
                    $.ajax({
                        url: "/api/gigs/" + link.attr("data-gig-id"),
                        method: "DELETE"
                    })
                        .done(function () {
                            link.parents("li").fadeOut(function () {
                                $(this).remove();
                            });
                        })
                        .fail(function () {
                            alert("something faild");
                        });
                }
                
            })
        })
    </script>
    }
