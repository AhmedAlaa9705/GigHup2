@model GigHup2.ViewModels.GigDetailsViewmodel
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Gig.Artist.Name

@if (Model.IsFollowing)
{
   
       <button class="btn btn-primary">Following</button>
    
}
else
{
    <button class="btn btn-info">Follow</button>

}
    </h2>
<p>performing at @Model.Gig.Venue on @Model.Gig.DateTime </p>

@if (User.Identity.IsAuthenticated&& Model.IsAttending)
{
      <p>Yes you are Going</p>
}





  
